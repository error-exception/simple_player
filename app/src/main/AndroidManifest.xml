<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".SimpleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:largeHeap="true"
        android:theme="@style/MD.Light" >
        <activity
            android:name=".activity.ThemeActivity"
            android:exported="false"
            android:label="@string/title_activity_theme"/>
        <activity
            android:name=".activity.PlayHistoryActivity"
            android:exported="false"
            android:label="@string/play_history" />
        <activity
            android:name=".activity.DeveloperActivity"
            android:exported="false"
            android:label="@string/developer" />
        <activity
            android:name=".activity.CheckHeadset"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ExcludePathActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ExtensionItemActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ScanMusicResult"
            android:exported="false"
            android:label="@string/scan_music_setting" />
        <activity
            android:name=".activity.NewSettingsActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.PlayerSettingsActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ScanMusicSettingsActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.UISettingsActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ExperimentalActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.KGPrettySoundActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.ChangeLogActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.KrcDecodeActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".activity.LyricsActivity"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:label="@string/settings" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PlaylistActivity"
            android:exported="false"
            android:label="@string/player_list" />
        <activity
            android:name=".activity.ScanMusicActivity"
            android:exported="false"
            android:label="@string/scan_music"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MusicInfo2"
            android:exported="false"
            android:label="@string/music_info"
            android:theme="@style/MD.NoActionBar" />
        <activity
            android:name=".activity.LockscreenActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:showWhenLocked="true"
            android:taskAffinity="com.simple.player.lockscreen"
            android:theme="@style/LockScreenBase"
            tools:targetApi="o_mr1" />
        <activity
            android:name="com.simple.player.activity.NewPlaylistActivity"
            android:exported="false" />
        <activity
            android:name="com.simple.player.activity.IncludePathActivity"
            android:exported="false"/>
        <activity
            android:name="com.simple.player.activity.KgListActivity"
            android:exported="false"/>
        <activity android:name=".activity.WebPlayerActivity"
            android:exported="false"/>
        <activity android:name=".activity.AudioOpenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="audio/*"/>
            </intent-filter>
        </activity>
        <service
            android:name=".service.SimpleService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" >
            <intent-filter>
                <action android:name="com.simple.player.SIMPLE_SERVICE" />
            </intent-filter>
        </service>

        <receiver
            android:name=".SimpleBroadcastReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
    </application>

</manifest>