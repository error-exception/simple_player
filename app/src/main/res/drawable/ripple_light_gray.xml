    android:color="#cccccccc"
    >
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item
                android:state_pressed="true">
                <shape>
                    <solid android:color="@color/windowBackGround"/>
                </shape>
            </item>
        </selector>

    </item>
