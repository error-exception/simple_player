<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/notification_root"
    android:layout_height="64dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/notification_artwork"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="192dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:text="@string/title"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_artist"
            android:text="@string/artist"
            android:textColor="#757575"
            android:textSize="12sp"
            android:maxLines="1"/>

    </LinearLayout>


    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_light_gray_borderless"
        android:layout_weight="1"
        android:src="@drawable/ic_play_dark"
        android:id="@+id/notification_play"
        />
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_light_gray_borderless"
        android:layout_weight="1"
        android:src="@drawable/ic_skip_next"
        android:id="@+id/notification_next"
        />
</LinearLayout>