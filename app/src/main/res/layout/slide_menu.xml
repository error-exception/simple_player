<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:background="@color/white"
	android:fitsSystemWindows="false"
	android:orientation="vertical">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="225dp"
		android:scaleType="centerCrop"
		android:id="@+id/home_slide_menu_head_pic"
		android:src="@drawable/header" />

	<View
		android:layout_width="match_parent"
		android:layout_height="16dp"
		android:background="#FFEDEDED"/>

	<ListView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:dividerHeight="0dp"
		android:divider="#00000000"
		android:id="@+id/home_slide_menu_optional"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="150dp"
			android:layout_height="48dp"
			android:gravity="center"
			android:id="@+id/home_settings"
			android:background="@drawable/ripple_light_gray">

			<com.simple.player.view.Icon
				android:layout_height="48dp"
				android:layout_width="48dp"
				android:textColor="@color/n_red"
				android:textSize="24sp"
				android:text="\ue8b8"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="@string/settings"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:textColor="#ff000000"
				android:textSize="16sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="150dp"
			android:layout_height="48dp"
			android:gravity="center"
			android:id="@+id/home_exit"
			android:background="@drawable/ripple_light_gray">

			<com.simple.player.view.Icon
				android:layout_height="48dp"
				android:layout_width="48dp"
				android:textColor="@color/n_red"
				android:textSize="24sp"
				android:text="\ue8ac"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="@string/exit"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:textColor="#ff000000"
				android:textSize="16sp"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

