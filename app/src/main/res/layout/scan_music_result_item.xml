<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:descendantFocusability="blocksDescendants"
	android:gravity="center_vertical">

	<LinearLayout
		android:layout_height="64dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<com.simple.player.view.SimpleCheckBox
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="32dp"
			android:layout_width="32dp"
			android:textSize="24sp"
			android:id="@+id/scan_music_result_check"
			android:layout_margin="8dp"
            android:textColor="@color/n_red"
			android:padding="0dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/player_list_adapter_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_weight="1.0">

            <TextView
                android:textSize="15sp"
                android:textColor="#000000"
				android:id="@+id/scan_music_result_title"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:textSize="12sp"
                android:textColor="#808080"
				android:id="@+id/scan_music_result_artist"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:singleLine="true"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

