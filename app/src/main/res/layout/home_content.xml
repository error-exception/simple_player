<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFEDEDED"
    android:orientation="vertical"

    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="8dp"
        android:id="@+id/back_action_bar"
        android:background="@color/n_red">

        <com.simple.player.view.IconButton
            android:background="@drawable/ripple_light_gray_transparent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/home_slide_menu"
            android:text="\ue5d2"
            android:textSize="26sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_height="?attr/actionBarSize"
            android:text="@string/music"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/action_title"
            android:singleLine="true"
            android:textStyle="bold"/>

        <com.simple.player.view.IconButton
            android:background="@drawable/ripple_light_gray_transparent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="?attr/actionBarSize"
            android:layout_gravity="right"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:text="\ue145"
            android:id="@+id/action_option"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <ScrollView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1.0">

        <include
            layout="@layout/home_functions_area_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>

</LinearLayout>

