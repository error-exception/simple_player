<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/web_player_state"
        android:text="ON"
        android:textSize="32dp"
        android:gravity="center"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape_corner_white_12dp"
        android:padding="32dp">

        <com.simple.player.view.IconButton
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="\ue8ac"
            android:textColor="#ffffffff"
            android:textSize="32dp"
            android:background="@drawable/ripple_round_n_red"
            android:id="@+id/web_player_switch"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:gravity="center"
            android:text="@string/web_tip"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#808080"
            android:id="@+id/web_player_ip"
            />
    </LinearLayout>


</LinearLayout>