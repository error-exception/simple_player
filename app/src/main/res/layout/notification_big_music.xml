<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/notification_root"
    android:background="@color/transparent"
    android:layout_height="112dp">

    <ImageView
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:background="@drawable/ripple_light_gray"
        android:src="@drawable/ic_launcher"
        android:id="@+id/notification_artwork"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"


        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/title"
                android:id="@+id/notification_title"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist"
                android:textColor="#757575"
                android:maxLines="1"
                android:id="@+id/notification_artist"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_light_gray_borderless"
                android:src="@drawable/ic_baseline_skip_previous_24"
                android:id="@+id/notification_previous"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_light_gray_borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_play_dark"
                android:id="@+id/notification_play"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_light_gray_borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next"
                android:id="@+id/notification_next"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>